<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#094017"
        tools:context=".MainActivity">

    <EditText
        android:id="@+id/vizenotu"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Vize notunuzu giriniz :"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#EDEDED"
        app:layout_constraintBottom_toTopOf="@+id/finalnotu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/finalnotu"
            android:hint="Final notunuzu giriniz :"
            android:textSize="20sp"
            android:textColor="#EDEDED"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/vizenotu"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btnHesapla"/>
    <Button
            android:text="HESAPLA"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/btnHesapla"
            android:textColor="#EDEDED"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/finalnotu"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/sonucid"
            android:background="#0F0F10"
            android:autoText="false"/>
    <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:id="@+id/sonucid"
            tools:text="80"

            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btnHesapla"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="180dp"
            android:textSize="40sp"
            android:textColor="#EDEDED"
            android:textStyle="bold"
            android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="( Production place pessimisticdeveloper. )"
        android:textAlignment="center"
        android:textColor="#EDEDED"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginTop="550dp"
        >

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>